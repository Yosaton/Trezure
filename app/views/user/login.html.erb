<%= form_for(:session, url:login_path, local: true, method: :post do |form| %>
  

  <p>
    <%= form.label :email, class:"listingtext" %><br>
    <%= form.text_field :email %>
  </p>
 
  <p>
    <%= form.label :password, class:"listingtext" %><br>
    <%= form.text_area :password %>
  </p>

    <p>
        <%= form.submit class:"btn btn-success" %>
    </p>
<% end %>
